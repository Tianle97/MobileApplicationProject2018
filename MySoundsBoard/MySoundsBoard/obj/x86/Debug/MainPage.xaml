<Page x:ConnectionId='1'
    x:Class="MySoundsBoard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MySoundsBoard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:MySoundsBoard.Model"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button x:ConnectionId='8' Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                                                 
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="30"
                    Height="50"
                    Width="50"
                    Content="&#xE700;"
                    />

            <Button x:ConnectionId='9' Name="BackButton"
                    RelativePanel.RightOf="HamburgerButton" 
                                            
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="30"
                    Height="50"
                    Width="50"
                    Content="&#xE0A6;"
                    />

            <AutoSuggestBox x:ConnectionId='10' Name="SearchAutoSuggestBox" 
                            RelativePanel.AlignRightWithPanel="True" 
                            PlaceholderText="Search sound~"
                            Width="280"
                            QueryIcon="Find"
                                                                          
                                                                                
                            />
        </RelativePanel>
        <SplitView x:ConnectionId='2' Name="MySplitView" 
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="50" OpenPaneLength="200" >
            <SplitView.Pane>
                <ListView x:ConnectionId='3' Name="MenuItems" IsItemClickEnabled="True"                                />
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <MediaElement x:ConnectionId='4' Name="MyMediaElement" AutoPlay="True" />

                    <TextBlock x:ConnectionId='5' Name="CategoryTextBlock" Text="All Sounds" FontSize="30" />

                    <GridView x:ConnectionId='6' Grid.Row="1" 
                              Name="SoundGridView"
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                                                           
                                                                  >
                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <Image x:ConnectionId='7' Name="MyImage" Height="112" Width="101"                             />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Content>

        </SplitView>
    </Grid>
</Page>

